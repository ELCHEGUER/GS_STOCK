{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}

    <div style="text-align: center; margin-top:30px">
        <h3 >Products</h3>
        <hr style="width: 50%; margin: 0 auto; border-top: 2px solid #000;">
    </div>

    <div class="container" style="margin-top: 60px;">
        <div class="row">
            {% for product in products %}
                <div class="col-md-3 mb-4">
                    <div class="card h-100 bg-light product-card" style="width: 85%; height: 350px;">
                        {% if product.image %}
                            <img src="/uploads/images/{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">
                                <strong>Price:</strong> {{ product.price }}<br>
                                <strong>Stock:</strong> {{ product.stock }}<br>
                                <strong>Supplier:</strong> {{ product.supplier ? product.supplier.name : 'N/A' }}<br>
                                <strong>Category:</strong> {{ product.category ? product.category.name : 'N/A' }}
                            </p>
                            <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        /* Ajout d'un style pour l'effet de survol des cartes */
        .product-card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Ombre légère au survol */
            transform: translateY(-50px); /* Légère translation vers le haut */
            transition: all 0.3s ease; /* Transition fluide */
        }
    </style>

{% endblock %}
