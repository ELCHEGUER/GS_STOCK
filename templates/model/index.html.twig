{% extends 'base.html.twig' %}

{% block title %}Model List{% endblock %}

{% block body %}
<div class="card-body">
    <div class="table-responsive text-nowrap">
        <table id="modelDataTable" class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Path</th>
                    <th>Icon</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#modelDataTable').DataTable({
                "serverSide": true,
                "ajax": "{{path('models_data')}}",
                "columns": [
                    { "data": "id"},
                    { "data": "name"},
                    { "data": "path"},
                    { "data": "icon"},
                    { "data": "roles"},
                    { "data": "actions", "name": "actions", "orderable": false, "searchable": false }
                ],
                "order": [[0, 'asc']],
                "autoWidth": false,
                "bDestroy": true
            });
        });
    </script>
{% endblock %}
